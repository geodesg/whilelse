#guide
  line-height: 120%
  font-size: 12px

  kbd
    font-family: Monda
    background: #222
    padding: 0 0.25em
    min-width: 1em
    display: inline-block
    text-align: center
    border: solid 1px #444
    border-radius: .25em

  ol, ul
    li
      list-style-type: none
      counter-increment: list
      position: relative
      &:before
        content: counter(list) "."
        position: absolute
        left: -2.5em
        width: 2em
        text-align: right
        color: #888
        vertical-align: top
  ul
    li
      &:before
        content: "-"

  ol, ul
    li
      margin: .5em 0
